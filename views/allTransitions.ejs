    <script>

        window.onload = () => {
            let table = document.getElementById('mytable')
            var request = {
                "url": '/allTransition',
                "method": "POST"
            }
            $.ajax(request).done(function (response) {
                response.map(transition => {
                    table.innerHTML += `<tr>
                    <td data-label="Username">${transition.user.username}</td>
                    <td data-label="Email">${transition.user.email}</td>
                    <td data-label="Total Amount">${transition.amount}/-</td>
                    <td data-label="Total Nights to Stay">${transition.nights} nights</td>
                    <td data-label="Total Nights to Stay">${transition.rooms} rooms</td>
                    <td data-label="Payment ID">${transition.razorpay_payment_id}</td>
                    <td data-label="Order ID">${transition.razorpay_order_id}</td>
                    <td data-label="Payment Time">${transition.createdAt}</td>
                    <td data-label="Razorpay Sign">${transition.razorpay_signature}</td>
                </tr>`
                })
            })
        }
