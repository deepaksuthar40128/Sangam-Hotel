    <script src="lib/tempusdominus/js/moment-timezone.min.js"></script>
    <script src="lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

    <!-- Template Javascript -->
    <script src="js/main.js"></script>
    <script>
        window.onload = async () => {
            mytable.innerHTML = `<div id="spinner" style="height:100px" class="show bg-white  start-50 d-flex align-items-center justify-content-center">
                        <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                            <span class="sr-only">Loading...</span>
                        </div>
                    </div>`
            $.ajax({
                url: '/allCoupons',
                method: "GET"
            }).done((response) => {
                feedCoupons(response);
            })
        }
        let mytable = document.getElementById('mytable');
        const feedCoupons = (data) => {
            mytable.innerHTML = '';
            data.map((coupon) => {
                mytable.innerHTML += `
                    <tr id='${coupon._id}'>
                        <td>${coupon.createdAt}</td>
                        <td>${coupon.value}</td>
                        <td>${coupon.discount_type}</td>
                        <td>${coupon.discount}</td>
                        <td> <button onclick="deleteCoupon('${coupon._id}')" style="background: #ed0000;">Delete</button> </td>
                    </tr>
                    `
            })
        }

        document.getElementById("openPopupButton").addEventListener("click", function () {
            document.getElementById("popup").style.display = "block";
        })

        let openPopupButton = document.getElementById("openPopupButton");
        let popup = document.getElementById("popup");
        let popupContent = document.querySelector(".popup-content");
        let coupon_btn = document.getElementById('coupon_btn');
        document.addEventListener("click", function (event) {
            if (!popupContent.contains(event.target) && event.target !== openPopupButton) {
                popup.style.display = "none";
            }
        });

        let coupon_form = document.getElementById('coupon_form');
        coupon_form.addEventListener('submit', (e) => {
            e.preventDefault();
            coupon_form.submit_btn.innerText = 'Loading'
            let data = {
                value: coupon_form.couponCode.value,
                discount_type: coupon_form.couponType.value,
                discount: coupon_form.discount.value,
            }
            $.ajax({
                url: '/addCoupon',
                method: 'POST',
                data
            }).done((coupon) => {
                let status = document.getElementById('error_success');
                if (coupon.success) {
                    status.style.background = 'green';
                    status.style.padding = '10px'
                    status.innerText = `Coupon Added Successfully!`
                    mytable.innerHTML = `
                    <tr id='${coupon._id}'>
                        <td>${coupon.createdAt}</td>
                        <td>${coupon.value}</td>
                        <td>${coupon.discount_type}</td>
                        <td>${coupon.discount}</td>
                        <td> <button onclick="deleteCoupon('${coupon._id}')" style="background: #ed0000;">Delete</button> </td>
                    </tr>
                    `+ mytable.innerHTML;
                }
                else {
                    status.innerText = coupon.error
                    status.style.background = 'red';
                    status.style.padding = '10px'
                }
                coupon_form.couponCode.value = ''
                coupon_form.discount.value = ''
                coupon_form.submit_btn.innerText = 'ADD'
            })
        })

        const deleteCoupon = (id) => {
            document.getElementById(id).children[4].children[0].innerHTML = "Loading";
            $.ajax({
                url: `/deleteCoupon/${id}`,
                method: "GET"
            }).done((response) => {
                if (response.success)
                    document.getElementById(id).remove();
                else {
                    alert("Something Wrong!");
                    document.getElementById(id).children[4].children[0].innerHTML = "Delete";
                }
            })
        }
    </script>
</body>

