            <div class="container py-5">
                <div class="row justify-content-center py-5">
                    <div class="col-lg-10 pt-lg-5 mt-lg-5 text-center">
                        <h1 class="display-3 text-white mb-3 animated slideInDown"><span
                                style="color: red;">Coupons</span>
                        </h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Navbar & Hero End -->

    <div class="content">
        <h2 style="text-align: center;">All Coupons</h2>
        <button style="display: block;
    margin: auto;
    border: none;
    background: #58d058;
    color: white;
    padding: 5px 20px;
    border-radius: 19px;
    margin: 10px auto;" class="addCoupon" id="openPopupButton">Add Coupon</button>
        <div style="overflow-x: auto;">
            <table>
                <thead>
                    <tr style="  background: #d6b161; color: white;">
                        <th>Add Time</th>
                        <th>Coupon Code</th>
                        <th>Coupon Type</th>
                        <th>Coupon Value</th>
                        <th> Remove </th>
                    </tr>
                </thead>
                <tbody id="mytable">
                </tbody>
            </table>
        </div>
    </div>

    <div id="popup" class="popup">
        <div class="popup-content">
            <div class="container-xxl py-5">
                <span style="display: block;color: white; margin: 0 12px;background: red;" id="error_success"></span>
                <div class="container">
                    <div class="booking p-5">
                        <div class="row g-5 align-items-center">
                            <div class="col-md-12">
                                <h1 class="text-white mb-4">Enter Details</h1>
                                <form id="coupon_form">
                                    <div class="row g-3">
                                        <div class="col-md-12">
                                            <div class="form-floating">
                                                <input type="text" name="couponCode" class="form-control bg-transparent"
                                                    id="couponCode" placeholder="Coupon Code" required>
                                                <label for="couponCode">Coupon Code</label>
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="form-floating">
                                                <select name="couponType" id="couponType"
                                                    class="form-control bg-transparent">
                                                    <option value="percent" selected>Percentage</option>
                                                    <option value="amount">Amount</option>
                                                </select>
                                                <label for="name">Coupon Type</label>
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="form-floating">
                                                <input min="1" type="number" name="discount"
                                                    class="form-control bg-transparent" id="discount"
                                                    placeholder="Coupon Value" required>
                                                <label for="discount">Coupon Value</label>
                                            </div>
                                        </div>

                                        <div class="col-12">
                                            <button class="btn btn-outline-light w-100 py-3" type="submit"
                                                id="coupon_btn" name="submit_btn">ADD</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
