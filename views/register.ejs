    <div class="login_container">
        <div class="container-xxl py-5 wow fadeInUp" data-wow-delay="0.1s">
            <div class="container">
                <div class="booking p-5">
                    <div class="row g-5 align-items-center">
                        <div class="col-md-6 text-white bla-bla-login">
                            <h6 class="text-white text-uppercase">Register</h6>
                            <h1 class="text-white mb-4">Sangam Hotels</h1>
                            <p class="mb-4">Welcome to Sangam Hotels! Create your account now to enjoy exclusive offers,
                                seamless bookings, and delightful
                                experiences during your stay.</p>
                            <p class="mb-4">Email may droped to spam folder</p>
                            <p class="mb-4">Before register we are request you to go through our <a href="/terms">Terms
                                    and Conditions.</a></p>
                            <a class="btn btn-outline-light py-3 px-5 mt-2" href="/login">Login</a>
                        </div>
                        <div class="col-md-6">
                            <h1 class="text-white mb-4">Enter Details</h1>
                            <% if( error !="" ){ %>
                                <div class="error" role="alert">
                                    <strong> Error </strong>
                                    <%= error %>
                                        <button type="button"
                                            onclick="document.getElementsByClassName('error')[0].remove()"
                                            class="btn-close">x</button>
                                </div>
                                <% } %>
                                    <% if( error_messages !="" ){ %>
                                        <div class="error" role="alert">
                                            <strong> Error </strong>
                                            <%= error_messages %>
                                                <button type="button"
                                                    onclick="document.getElementsByClassName('error')[0].remove()"
                                                    class="btn-close">x</button>
                                        </div>
                                        <% } %>
                                            <% if( success_messages !="" ){ %>
                                                <div class="success" role="alert">
                                                    <strong> Success </strong>
                                                    <%= success_messages %>
                                                        <button type="button"
                                                            onclick="document.getElementsByClassName('error')[0].remove()"
                                                            class="btn-close">x</button>
                                                </div>
                                                <% } %>
                                                    <% if( !type ){ %>
                                                        <form action="/registerBase" method="POST">
                                                            <div class="row g-3">
                                                                <div class="col-md-12">
                                                                    <div class="form-floating">
                                                                        <input type="email" name="email"
                                                                            class="form-control bg-transparent"
                                                                            id="email" placeholder="Your Email">
                                                                        <label for="email">Your Email</label>
                                                                    </div>
                                                                </div>
                                                                <p style="    margin: 0;
    /* padding: 0; */
    color: #ff8686;
    font-size: small;">*If you agree our <a href="/terms"> terms and condition</a> then only continue.</p>
                                                                <div class="col-12">
                                                                    <button class="btn btn-outline-light w-100 py-3"
                                                                        type="submit">Verify Email</button>
                                                                </div>
                                                            </div>
                                                        </form>
                                                        <%}else{%>
                                                            <form action="/register" method="POST">
                                                                <div class="row g-3">
                                                                    <div class="col-md-12">
                                                                        <div class="form-floating">
                                                                            <input type="text" name="username"
                                                                                class="form-control bg-transparent"
                                                                                id="username" placeholder="Your Name">
                                                                            <label for="email">Your Name</label>
                                                                        </div>
                                                                    </div>
                                                                    <div class="col-md-12">
                                                                        <div class="form-floating">
                                                                            <input type="email" name="email"
                                                                                class="form-control bg-transparent"
                                                                                id="email" placeholder="Your Email">
                                                                            <label for="email">Your Email</label>
                                                                        </div>
                                                                    </div>
                                                                    <div class="col-md-12">
                                                                        <div class="form-floating">
                                                                            <input type="number" name="otp"
                                                                                class="form-control bg-transparent"
                                                                                id="email" placeholder="Your OTP">
                                                                            <label for="email">Your OTP</label>
                                                                        </div>
                                                                    </div>
                                                                    <div class="col-md-12">
                                                                        <div class="form-floating">
                                                                            <input type="password" name="password"
                                                                                class="form-control bg-transparent"
                                                                                id="password" placeholder="Password">
                                                                            <label for="name">Password</label>
                                                                        </div>
                                                                    </div>
                                                                    <div class="col-12">
                                                                        <button class="btn btn-outline-light w-100 py-3"
                                                                            type="submit">Register</button>
                                                                    </div>
                                                                </div>
                                                            </form>
                                                            <%}%>
                                                                <div class="col-12"
                                                                    style="    margin-top: 10px; background-color: #ff3b3b59;">
                                                                    <a href="/google">

                                                                        <button class="btn btn-outline-light w-100 py-3"
                                                                            type="submit">Google</button>
                                                                    </a>
                                                                </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>


