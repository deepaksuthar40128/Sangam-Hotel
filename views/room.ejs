    <!-- Template Stylesheet -->
    <link href="css/style.css" rel="stylesheet">
    <link href="css/room.css" rel="stylesheet">
</head>

<body>
    <!-- Spinner Start -->
    <div id="spinner"
        class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
        <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
    <!-- Spinner End -->


    <!-- Navbar & Hero Start -->
    <div class="container-fluid position-relative p-0">
        <nav class="navbar navbar-expand-lg navbar-light px-4 px-lg-5 py-3 py-lg-0">
            <a href="/" class="navbar-brand p-0">
                <h2 class="text-primary m-0"><i class="fa fa-map-marker-alt me-3"></i>Sangam Hotels</h2>
                <!-- <img src="/img/logo.png" alt="Logo"> -->
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                <span class="fa fa-bars"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <div class="navbar-nav ms-auto py-0">
                    <a href="/" class="nav-item nav-link">Home</a>
                    <a href="/showRooms" class="nav-item nav-link active">Rooms</a>
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">History</a>
                        <div class="dropdown-menu m-0">
                            <a href="/allTransitions" class="dropdown-item">All Transitions</a>
                        </div>
                    </div>
                    <a href="/contactUs" class="nav-item nav-link">Contact Us</a>
                </div>
                <% if( logged ){ %>
                    <a href="/logout" class="btn btn-primary rounded-pill py-2 px-4">Logout</a>
                    <%}else{%>
                        <a href="/login" class="btn btn-primary rounded-pill py-2 px-4">Login/Register</a>
                        <%}%>
            </div>
        </nav>

        <div class="container-fluid bg-primary mb-5 hero-header">
            <div class="container py-5">
                <div class="row justify-content-center py-5">
                    <div class="col-lg-10 pt-lg-5 mt-lg-5 text-center">
                        <h1 class="display-3 text-white mb-3 animated slideInDown">Best In Class <span
                                style="color: red;">Rooms</span></h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
   <input type="hidden" id="room_amount" value="<%=amount%>">
    <%if(logged){%>
        <div style="display: none;" id="username">
            <%=username%>
        </div>
        <div style="display: none;" id="email">
            <%=email%>
        </div>
        <%}%>
            <!-- Navbar & Hero End -->

            <div class="hotelContainer">
                <div class="slider" id="slider">
                    <i class="fas fa-window-close arrow close" onClick="setOpen(false,0)"></i>
                    <i class="fas fa-arrow-circle-left arrow" onClick="handleMove('l')"></i>
                    <div class="sliderWrapper">
                        <img src='' alt="" id="slide_img" class="sliderImg" />
                    </div>
                    <i class="fas fa-arrow-circle-right arrow" class="arrow" onClick="handleMove('r')"></i>
                </div>
                <div class="hotelWrapper">
                    <button onclick="window.location.replace('/contactUs')" class="bookNow">Ask About It!</button>
                    <h1 class="hotelTitle">Sangam Hotels</h1>
                    <div class="hotelAddress">
                        <FontAwesomeIcon icon={faLocationDot} />
                        <span>HP Tower,Ghungru Chauraha,Jhalwa,Prayagraj,U.P.</span>
                    </div>
                    <span class="hotelDistance">
                        Excellent location â€“ Near Ghungru Chauraha,Jhalwa
                    </span>
                    <span class="hotelPriceHighlight">
                        Book a stay over <%=amount%>/-
                    </span>
                    <div class="hotelImages">
                        <div class="hotelImgWrapper" key='0'>
                            <img onClick="handleOpen(0)" src='/img/rooms/f1.jpeg' alt=""
                                class="hotelImg selectDisable" />
                        </div>

                        <div class="hotelImgWrapper" key='0'>
                            <img onClick="handleOpen(1)" src='/img/rooms/f62.jpeg' alt=""
                                class="hotelImg selectDisable" />
                        </div>
                        <div class="hotelImgWrapper" key='0'>
                            <img onClick="handleOpen(2)" src='/img/rooms/f3.jpeg' alt=""
                                class="hotelImg selectDisable" />
                        </div>
                        <div class="hotelImgWrapper" key='0'>
                            <img onClick="handleOpen(3)" src='/img/rooms/f4.jpeg' alt=""
                                class="hotelImg selectDisable" />
                        </div>
                        <div class="hotelImgWrapper" key='0'>
                            <img onClick="handleOpen(4)" src='/img/rooms/f5.jpeg' alt=""
                                class="hotelImg selectDisable" />
                        </div>
                        <div class="hotelImgWrapper" key='0'>
                            <img onClick="handleOpen(5)" src='/img/rooms/f2.jpeg' alt=""
                                class="hotelImg selectDisable" />
                        </div>
                    </div>
                    <div class="hotelDetails">
                        <div class="hotelDetailsTexts">
                            <h1 class="hotelTitle">Stay in the heart of City</h1>
                            <p class="hotelDesc">
                                Discover the perfect location for your stay in the vibrant heart of the city at Sangam
                                Hotels. Immerse yourself in the
                                bustling energy, with renowned landmarks, entertainment venues, and cultural hotspots
                                just steps away. Indulge in the
                                convenience of a central location, allowing you to make the most of your city
                                exploration and create unforgettable
                                memories.
                            </p>
                        </div>
                        <div class="hotelDetailsPrice">
                            <h1>Perfect for a multi-night stay!</h1>
                            <span>
                                Located in the real heart of Allahabad
                            </span>
                            <h2>
                                <b><%=amount%>/-per Night</b>
                            </h2>
                            <div id="actionBtn">
                                <% if( logged ){ %>
                                    <p>
                                        Total Nights:
                                    </p>
                                    <div style="margin: auto;">
                                        <div class="input-counter">
                                            <span class="minus-btn"><i class="fas fa-minus"></i></span>
                                            <input min=1 max="100" type="number" value="1" id="night_counter" disabled>
                                            <span class="plus-btn"><i class="fas fa-plus"></i></span>
                                        </div>
                                    </div>
                                    <p>
                                        Total Rooms:
                                    </p>
                                    <div style="margin: auto;">
                                        <div class="input-counter">
                                            <span class="minus-btn"><i class="fas fa-minus"></i></span>
                                            <input min=1 max="100" type="number" value="1" id="room_counter" disabled>
                                            <span class="plus-btn"><i class="fas fa-plus"></i></span>
                                        </div>
                                    </div>
                                    <div id="totalbill">
                                        <p>Rate Per Night: <span class="price_data"><%=amount%></span></p>
                                        <p>Total Night:<span class="price_data" id="total_night">1</span></p>
                                        <p>Total Rooms:<span class="price_data" id="total_night">1</span></p>
                                        <p>Price: <span class="price_data">323232</span></p>
                                        <p>Discount: <span class="price_data">0</span></p>
                                        <p>Tax: <span class="price_data">3423423.34</span></p>
                                        <p>Final Price:<span class="price_data">21313</span></p>
                                        <p style="color: black;">Payable Price(INR):<span class="price_data">2324</span>
                                        </p>
                                    </div>
                                    <div id="popup" class="popup">
                                        <div class="popup-content">
                                            <div class="container-xxl py-5">
                                                <span
                                                    style="display: block;color: white; margin: 0 12px;background: red;"
                                                    id="error_success"></span>
                                                <div class="container">
                                                    <div class="booking p-5">
                                                        <div class="row g-5 align-items-center">

                                                            <div class="col-md-12">
                                                                <h1 class="text-white mb-4">Enter Details</h1>
                                                                <form id="coupon_form">
                                                                    <div class="row g-3">
                                                                        <div class="col-md-12">
                                                                            <div class="form-floating">
                                                                                <input type="text" name="coupon"
                                                                                    class="form-control bg-transparent"
                                                                                    id="coupon" placeholder="Coupon">
                                                                                <label for="name">Coupon</label>
                                                                            </div>
                                                                        </div>

                                                                        <div class="col-12">
                                                                            <button
                                                                                class="btn btn-outline-light w-100 py-3"
                                                                                type="submit"
                                                                                id="coupon_btn">Verify</button>
                                                                        </div>
                                                                    </div>
                                                                </form>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <button id="openPopupButton">Have Coupon?</button>
                                    <button onclick="processBill()">Process Total Bill</button>
                                    <p style="    margin: 0;
    /* padding: 0; */
    color: #ff8686;
    font-size: small;" >*Read our <a style="color: red;" href="/privacy"> Privacy Policy</a></p>
                                    <%}else{%>
                                        <button onclick="window.open('/login','_self')">Login/Register</button>
                                        <%}%>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Footer Start -->
            <div class="container-fluid bg-dark text-light footer pt-5 mt-5 wow fadeIn" data-wow-delay="0.1s">
                <div class="container py-5">
                    <div class="row g-5">
                        <div class="col-lg-3 col-md-6">
                            <h4 class="text-white mb-3">Sangam Hotels</h4>
                            <a class="btn btn-link" href="/">About Us</a>
                            <a class="btn btn-link" href="/contactUs">Contact Us</a>
                            <a class="btn btn-link" href="/terms">Terms and Conditions</a>
                            <a class="btn btn-link" href="/privacy">Privacy Policy</a>
                            <a class="btn btn-link" href="https://merchant.razorpay.com/policy/M4WSnPP4Xl1aq4/shipping">Shipping and Delivery Policy</a>
                        </div>
                        <div class="col-lg-3 col-md-6">
                            <h4 class="text-white mb-3">Contact</h4>
                            <p class="mb-2"><i class="fa fa-map-marker-alt me-3"></i>HP Tower,Ghungru
                                Chauraha,Jhalwa,Prayagraj,U.P.,211012
                            </p>
                            <p class="mb-2"style="width: max-content;"><i class="fa fa-phone-alt me-3"></i>+91-8931098305, +91-8604098305</p>
                            <p class="mb-2"style="width: max-content;"><i class="fa fa-envelope me-3"></i>support@sangaminternationalhotel.com</p>
                        </div>
                    </div>
                </div>
                <div class="container">
                    <div class="copyright">
                        <div class="row">
                            <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                                &copy; <a class="border-bottom" href="#">Sangam Hotels</a>, All Right Reserved@2023.
                                Made with <span style="color: red;"><i class="fas fa-heart"></i></span> by <a
                                    class="border-bottom" href="https://deepaksuthar40128@gmail.com">Deepak
                                    Suthar</a>
                            </div>
                            <div class="col-md-6 text-center text-md-end">
                                <div class="footer-menu">
                                    <a href="/">Home</a>
                                    <a href="/">Cookies</a>
                                    <a href="/">Help</a>
                                    <a href="/">FQAs</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Footer End -->

            <!-- Back to Top -->
            <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>


            <!-- JavaScript Libraries -->
            <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
            <script src="lib/wow/wow.min.js"></script>
            <script src="lib/easing/easing.min.js"></script>
            <script src="lib/waypoints/waypoints.min.js"></script>
            <script src="lib/owlcarousel/owl.carousel.min.js"></script>
            <script src="lib/tempusdominus/js/moment.min.js"></script>
            <script src="lib/tempusdominus/js/moment-timezone.min.js"></script>
            <script src="lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

            <!-- Template Javascript -->
            <script src="js/main.js"></script>
            <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
            <script src="js/room.js"></script>

</body>

